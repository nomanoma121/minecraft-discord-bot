{
  "name": "minecraft-discord-bot",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run ./src/index.ts",
    "dev": "bun run --watch ./src/index.ts",
    "cmd:deploy": "bun run ./scripts/deploy.ts",
    "db:generate": "bun drizzle-kit generate",
    "db:push": "bun drizzle-kit push",
    "biome:check": "bun biome check --write ./src ./scripts",
    "biome:lint": "bun biome lint ./src ./scripts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@libsql/client": "^0.15.15",
    "@types/bun": "^1.3.1",
    "@types/dockerode": "^3.3.45"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "discord.js": "^14.24.1",
    "dockerode": "^4.0.9",
  }
}
